<body style="margin-top: 20px; background-color: FloralWhite; margin-left: 20px""  >

<h2>
  Update Profile
</h2>
<%= form_with model: @professor, local: true do |form| %>

  <% if @professor.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@professor.errors.count, "error") %> prohibited
        this professor from being saved:
      </h2>
      <ul>
        <% @professor.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end%>

  <p>
    <%= form.label :Name %><br>
    <%= form.text_field :Name, :required => true %>
  </p>

  <p>
    <%= form.label :Email %><br>
    <%= form.text_field :Email, :required => true %>
  </p>

  <p>
    <%= form.label :Dorm %><br>
    <%= form.text_field :Office %>
  </p>

  <p>
    <%= form.label :Major %><br>
    <%= form.text_field :Department, :required => true %>
  </p>

  <p>
    <%= form.label :image %><br>
    <%= form.file_field :image_file_name, :required => true %>
  </p>

  <p>
    <%= form.label :Phone_Number %><br>
    <%= form.telephone_field :Phone_Number, :required => true, :pattern => "[0-9]{3} [0-9]{3} [0-9]{4}" %>
  </p>

  <p>
    <%= form.label :Nationality %><br>
    <%= form.telephone_field :Nationality, :required => true %>
  </p>


  <p>
    <%= form.label :Personal_Statement %><br>
    <%= form.text_area :Personal_Statement, :required => true %>
  </p>

  <p>
    <%= form.submit 'Update Mentor Profile' %>
  </p>

 <% end %>
<%= link_to 'Back', professor_path(@professor) %><br>
<td><%= link_to 'Delete Profile', professor_path(@professor),
              :confirm => "Are you sure?", :method => :delete %></td>
<p style="margin-bottom: 15px">
</p>
</body>
