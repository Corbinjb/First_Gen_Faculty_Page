<body style="background-color:FloralWhite">

  <style>
  body {
      background: #555;
  }

  .content {
      max-width: 500px;
      margin: auto;
      background: white;
      padding: 10px;
  }
  </style>
  
<body>

<div class="content">
<p style="margin-top: 10px">
  <%= link_to image_tag(@professor.image.url(:thumb), class: 'img-circle'), @professor.image.url, target: '_blank' %>
</p>

<p>
  <strong>Name:</strong>
  <%= @professor.Name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @professor.Email %>
</p>

<p>
  <strong>Office:</strong>
  <%= @professor.Office %>
</p>

<p>
  <strong>Department:</strong>
  <%= @professor.Department %>
</p>

<p>
  <strong>Phone_Number:</strong>
  <%= @professor.Phone_Number %>
</p>

<p>
  <strong>Personal_Statement:</strong>
  <%= @professor.Personal_Statement %>
</p>

<%= link_to 'Back', welcome_index_path %><br>
<%= link_to 'Update Profile', edit_professor_path(@professor) %>

</div>
